"mpris": {
	"format": "{dynamic}",
	"format-paused": "{dynamic}",
  // "ignored-players": ["firefox"],
  "player": "spotify",
  "dynamic-order": ["title", "artist"],
	"player-icons": {
		"default": "▶",
		"mpv": "🎵"
	},
	"status-icons": {
		"paused": "⏸"
	},
	// "ignored-players": ["firefox"]
},



  "cpu": {
    "format": "  {usage}%",
    "tooltip": true,
    "on-click": "alacritty -e btop"
  },

  "temperature": {
    "thermal-zone": 2,
    "hwmon-path": "/sys/class/hwmon/hwmon3/temp1_input",
    "critical-threshold": 80,
    "format-critical": "{temperatureC}°C ",
    // "format": "{temperatureC}°C "
    "format": " {temperatureC}°",
    "on-click": "alacritty -e btop"
  },

"battery": {
    // "bat": "BATT",
    // "adapter": "ACAD",
    "design-capacity": true,
    "full-at": 80,
    "interval": 120,
    "states": {
        "good": 100,
        "fine": 80,
        "warning": 30,
        "critical": 15
    },
    "format": "{capacity}% {icon}",
    "format-icons": ["", "", "", "", ""],
    "max-length": 25
},
"memory": {
    "format": " {avail}GiB",
    "interval": 60,
    "max-length": 10
},
"disk": {
    "format": " {free}",
    "interval": 300,
    "path": "/"
},

// buradaki ise /mnt altindaki usb nin boyutunu dinamik olarak gosterecek
// "disk": {
//     "interval": 300,
//     "format": "{free}",
//     "path": "/mnt"
// },

  "group/my-tray": {
    "orientation": "horizontal",   // sağda yatay duracak
    "modules": [
      "custom/trayicon",           // grup lideri (işaret veya ikon)
      "tray"                       // gerçek tray modülü
    ],
    "drawer": {
      "transition-duration": 400,          // ms cinsinden animasyon
      "transition-left-to-right": false,   // ikon sola kayıp açsın istiyorsan
      "children-class": "drawer-child",    // child’lara CSS için class
      "click-to-reveal": false             // hover ile açılsın
    }
  },
  "custom/trayicon": {
    "format": "◀",        // buraya istediğin işareti koyabilirsin (örn. ⋮)
    "tooltip": "Tray"     // üstüne gelince tooltip
  },
  "tray": {
    "icon-size": 18,
    "spacing": 10
  }
}
