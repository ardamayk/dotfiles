# bind and bind-key is same
# set and set-option is same
unbind-key C-b
set-option -g prefix \~
bind \~ send-prefix

##### Genel konfor
set -g mouse on
set -g history-limit 100000
set -g renumber-windows on
set -g focus-events on
set -sg escape-time 10            # 0 da olur; 10ms daha güvenli
set -g repeat-time 500           # Prefix sonrası 2 sn içinde tekrar tuşlarını kabul et


# vi-style gecisler
##### Panel/Window split'leri mevcut dizinden aç
bind | split-window -h -c "#{pane_current_path}"
bind - split-window -v -c "#{pane_current_path}"
bind c new-window -c "#{pane_current_path}"

##### Vim benzeri panel gezinme (tekrarlanabilir)
bind -r h select-pane -L
bind -r j select-pane -D
bind -r k select-pane -U
bind -r l select-pane -R

##### Hızlı panel boyutlandırma (basılı tut)
bind -r H resize-pane -L 5
bind -r J resize-pane -D 3
bind -r K resize-pane -U 3
bind -r L resize-pane -R 5

bind r command-prompt -I "#S" "rename-session '%%'"

bind w choose-tree -Zw     # w ile session/window/pane ağacı


setw -g automatic-rename on
set -g allow-rename on
set -g window-status-format "#I:#W"
set -g window-status-current-format "#I:#W"
set -g status-justify centre

# set -g status 2
# set -g status-format[0] " "     # üst satır sadece boş
# # Left status bar
# set -g status-left ' \
# #[bold,fg=yellow]#S\
# #[fg=white] | \
# #[bold,fg=cyan]#H'
#
# # right status bar
# # set -g status-right ''
# set -g status-right '#[fg=green]#{pane_current_path} #[fg=white]|#[fg=blue] #(/home/r/.config/tmux/proc.sh)'
#
# set-option -g status-position bottom
#


set -g status 2
set -g status-position bottom

# Üst satır boş (gap)
set -g status-format[0] " "

# Alt satır: sol | ortada window list | sağ
set -g status-format[1] '\
#[align=left]#[bold,fg=yellow]#S #[fg=white]| #[bold,fg=cyan]#H \
#[align=centre]#[fg=white]#I:#W#[bold,fg=black,bg=yellow]#I:#W#[default] \
#[align=right]#[fg=green]#{pane_current_path} #[fg=white]| #[fg=blue]#(/home/r/.config/tmux/proc.sh)\
'

# Window stilleri
set -g window-status-format " #[fg=white]#I:#W "
set -g window-status-current-format " #[bold,fg=black,bg=yellow]#I:#W#[default] "

##### Status bar (sade)
set -g status-interval 1
set -g status-right-length 91
set -g status-left-length 100
set -g status-style fg=pink,bg=black
set -g pane-border-style fg=brightblack
set -g pane-active-border-style fg=red
set -g message-style fg=black,bg=yellow

##### Zoom / Panoları senkronize et toggle
bind z resize-pane -Z
bind s setw -g synchronize-panes \; display-message "sync: #{?synchronize-panes,ON,OFF}"

# ~/.tmux.conf sonuna ekle:
set -g @plugin 'tmux-plugins/tpm'
# TODO: bunlara bakilacak
# set -g @plugin 'tmux-plugins/tmux-sensible'
# set -g @plugin 'tmux-plugins/tmux-yank'           # kopyalama iyileştirmeleri
# set -g @plugin 'tmux-plugins/tmux-prefix-highlight'
set -g @plugin 'tmux-plugins/tmux-resurrect'      # oturumları kaydet/yükle
set -g @plugin 'tmux-plugins/tmux-continuum'      # otomatik kaydet
set -g @continuum-restore 'on'
set -g @resurrect-capture-pane-contents 'on'
run '~/.config/tmux/plugin-manager/tpm'
